<link rel="stylesheet" href="/css/weekview.css">

<div class="container">
<div class="daliy">
    <h1>Weekly View</h1>
    <button type="button" id="daily-view"><a href="/habits/dailyView">Show Daily View</a></button>
</div>
   

<div id="habits-div">
    <%for(let habit of habits){%>
    <div class="weekly-view">
        <h4 style="color: aliceblue;"><%=habit.name%></h4>
        <%habit.status.reverse().forEach(function(habitstatus){%>
            <div class="each-day">
                <p><%=habitstatus.date%></p>

                <!-- <%var bgcolor='#B1B6B6'%>
               <% if(habitstatus.datestatus!=='Not Started'){%>
                    <%bgcolor=habitstatus.datestatus=='Done'?'green':'red';}%>

                <button style="background-color:<%=bgcolor%>"><a href="/habits/weeklyView/toggleStatus/?date=<%=habitstatus.date%>&id=<%=habit._id%>">&nbsp</a></button> -->
                <% var statusText = habitstatus.datestatus === 'Done' ? 'Done' : habitstatus.datestatus === 'Not Done' ? 'Not Done' : 'None'; %>
                        <button><a href="/habits/weeklyView/toggleStatus/?date=<%=habitstatus.date%>&id=<%=habit._id%>" style="font-size: 10px;"><%=statusText%></a></button>

            </div>
            <%})%>
    </div>
</div>
    <%}%>
</div>
